<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_background">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_detail_size"
        android:background="#fff"
        android:padding="@dimen/block_detail_padding"
        android:orientation="vertical"
        android:layout_marginBottom="1dp" >

        <TextView
            android:id="@+id/materia_relatoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="MATÉRIA: SF PLC 88/2012" />

        <TextView
            android:id="@+id/comissao_relatoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMISSÃO: CCJ | Senado Federal" />

    </LinearLayout>

</LinearLayout>